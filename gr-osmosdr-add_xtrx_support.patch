Index: buildroot/package/armadillo/Config.in
===================================================================
--- buildroot.orig/package/armadillo/Config.in
+++ buildroot/package/armadillo/Config.in
@@ -1,4 +1,4 @@
-comment "armadillo needs a toolchain w/ C++"
+comment "armadillo needs a toolchain w/ C++, fortran"
 	depends on !BR2_INSTALL_LIBSTDCPP
 	depends on !BR2_powerpc
 	depends on !BR2_m68k_cf
@@ -10,9 +10,9 @@ comment "armadillo needs a glibc toolcha
 config BR2_PACKAGE_ARMADILLO
 	bool "armadillo"
 	depends on BR2_INSTALL_LIBSTDCPP
-	depends on !BR2_powerpc || BR2_TOOLCHAIN_USES_GLIBC # clapack
-	depends on !BR2_m68k_cf # clapack
-	select BR2_PACKAGE_CLAPACK
+	depends on BR2_TOOLCHAIN_HAS_FORTRAN
+	depends on !BR2_powerpc || BR2_TOOLCHAIN_USES_GLIBC # lapack
+	select BR2_PACKAGE_LAPACK
 	help
 	  Armadillo: An Open Source C++ Linear Algebra Library for
 	  Fast Prototyping and Computationally Intensive Experiments.
Index: buildroot/package/armadillo/armadillo.mk
